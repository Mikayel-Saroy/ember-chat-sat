<div class="container">
  <div class="row py-5">
    <div class="col">
      <h4>Sign In</h4>
      <BsForm @formLayout="vertical" @model={{this}} @onSubmit={{fn this.onSubmit}} as |form|>
        <form.element style="color: {{this.validation.isErrorColor}}" @controlType="email" @label={{this.validation.labelMessageLogin}}
                      placeholder="Email" @property="validation.email" required/>
        <form.element style="color: {{this.validation.isErrorColor}}" @controlType="password" @label={{this.validation.labelMessageRegistration}}
                      placeholder="Password" @property="validation.password"/>
        <form.submitButton>Sign in</form.submitButton>
      </BsForm>
    </div>
  </div>
</div>


{{yield}}