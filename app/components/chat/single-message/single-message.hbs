{{#if (eq @currentUserUid @message.userUid)}}
  <Chat::SelfMessage::SelfMessage @message={{@message}}/>
{{else}}
  {{#if @message.isNewMessage}}
    <div class="user-message" style="color: {{@newColor}}">
      <div class="username">{{@message.email}}</div>
      <div class="new_message_mark">{{@newMessageMark}}</div>
      {{@message.content}}
      <div class="date_and_time">
        {{@message.dateAndTime}}
      </div>
      <div class="message_more">{{@message.more}}</div>
    </div>
  {{else}}
    <div class="user-message" style="color: {{@defaultColor}}">
      <div class="username">{{@message.email}}</div>
      {{@message.content}}
      <div class="date_and_time">
        {{@message.dateAndTime}}
      </div>
      <div class="message_more">{{@message.more}}</div>
    </div>
  {{/if}}
{{/if}}

{{yield}}